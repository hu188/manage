/* pages/incomeCenter/incomeCenter.wxss */

.list {
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
.income-list{
  height: 55px;
  width:120px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between
}
.income{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 10%;
}
.btn{
  border-radius: 20px;
  background: #19be6b;
  margin-top: 350px;
  width: 70%;
}

/*  */
.empty{
  margin-top: 10px;
  height: 10px;
  background: rgba(1,136,251,0.2);
}

.body{
  width:100%;
  height:100%;
}
.title{
  font-weight: 600;
  font-size: 18px;
}
.title-sty{
  display: flex;
  align-items: center;
  margin-top: 5px;
}

.goods-sales{
  display: flex;
  align-content: center;
  margin-top: 5px;
}
.goods-details{
  width:100px;
  color:#555;
  text-align:center;
}
.user-details{

  padding:0px 15px;
  width: auto;
  height: auto; 
  display: inline-block;
  text-align:center;

}

.account-details{
  background-color: rgba(238, 238, 238,0.6);
  /* height:50px;  */
  white-space: nowrap;
  margin-top: 15px;
  border-radius: 10px;
}
.params-sty{
  display: inline-block;
 font-size: 13px;
}
.params-details{
  /* border-top: 0.5px #6B6B6B dashed ; */
